{
    "mcpServers": {
        "task-master-ai": {
            "command": "node",
            "args": [
                "/usr/local/lib/node_modules/task-master-ai/mcp-server/server.js"
            ],
            "env": {
                "ANTHROPIC_API_KEY": "${ANTHROPIC_API_KEY}",
                "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
                "OPENAI_API_KEY": "${OPENAI_API_KEY}",
                "GOOGLE_API_KEY": "${GOOGLE_API_KEY}",
                "XAI_API_KEY": "${XAI_API_KEY}",
                "OPENROUTER_API_KEY": "${OPENROUTER_API_KEY}",
                "MISTRAL_API_KEY": "${MISTRAL_API_KEY}",
                "AZURE_OPENAI_API_KEY": "${AZURE_OPENAI_API_KEY}",
                "OLLAMA_API_KEY": "${OLLAMA_API_KEY}"
            }
        },
        "claude-code-mirralism": {
            "command": "claude",
            "args": ["mcp", "serve"],
            "env": {
                "CLAUDE_PROJECT_NAME": "MIRRALISM_V2",
                "CLAUDE_PROJECT_ROOT": "/Users/suetakeshuuhei/MIRRALISM_V2"
            }
        },
        "mirralism-calculations": {
            "command": "node",
            "args": ["scripts/calculations/basic_math.js"],
            "env": {}
        }
    }
}